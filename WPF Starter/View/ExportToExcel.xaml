<Window x:Class="WPF_Starter.View.ExportToExcel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Starter.View"
        mc:Ignorable="d"
        Title="ExportToExcel" Height="400" Width="250">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="25,10,0,0" TextWrapping="Wrap" Text="Date" VerticalAlignment="Top" Height="16" Width="44"/>
        <Button Content="Export" 
                HorizontalAlignment="Left" 
                Margin="164,326,0,0"
                VerticalAlignment="Top"
                Width="76" 
                RenderTransformOrigin="0.5,0.5"
                Command="{Binding Commands.ExportToExcelFile}" Height="20">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox 
            Margin="25,79,25,0" 
            TextWrapping="Wrap" 
            UndoLimit="400"
            x:Name="NameTextBox" Height="22" VerticalAlignment="Top"
            Text="{Binding States.NameBoxText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        <TextBox 
            Margin="25,270,25,0" 
            TextWrapping="Wrap" 
            UndoLimit="400"
            x:Name="CountryTextBox" Height="22" VerticalAlignment="Top"
            Text="{Binding States.CountryBoxText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        <TextBox 
            Margin="25,221,25,0" 
            TextWrapping="Wrap" 
            UndoLimit="400"
            x:Name="CityTextBox" Height="22" VerticalAlignment="Top"
            Text="{Binding States.CityBoxText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        <TextBox 
            Margin="25,172,25,0" 
            TextWrapping="Wrap" 
            UndoLimit="400"
            x:Name="PatronymicTextBox" Height="22" VerticalAlignment="Top"
            Text="{Binding States.PatronymicBoxText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        <TextBox 
            Margin="25,128,25,0" 
            TextWrapping="Wrap" 
            UndoLimit="400"
            x:Name="SurnameTextBox" Height="22" VerticalAlignment="Top"
            Text="{Binding States.SurnameBoxText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

        <TextBlock HorizontalAlignment="Left" Margin="25,58,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Height="16" Width="32"/>
        <TextBlock HorizontalAlignment="Left" Margin="25,107,0,0" TextWrapping="Wrap" Text="Surname" VerticalAlignment="Top" Height="16" Width="47"/>
        <TextBlock HorizontalAlignment="Left" Margin="25,156,0,0" TextWrapping="Wrap" Text="Patronymic" VerticalAlignment="Top" Height="16" Width="59"/>
        <TextBlock HorizontalAlignment="Left" Margin="25,200,0,0" TextWrapping="Wrap" Text="City" VerticalAlignment="Top" Height="16" Width="30"/>
        <TextBlock HorizontalAlignment="Left" Margin="25,249,0,0" TextWrapping="Wrap" Text="Country" VerticalAlignment="Top" Height="16" Width="47"/>
        <DatePicker HorizontalAlignment="Center"
                    Margin="0,34,0,0"
                    VerticalAlignment="Top"
                    Width="200"
                    SelectedDate = "{Binding States.DateBoxText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">

            <DatePicker.Resources>
                <Style TargetType="DatePickerTextBox">
                    <Setter Property="IsReadOnly" Value="True"/>
                </Style>
            </DatePicker.Resources>
        </DatePicker>
        <Button Content="Button" HorizontalAlignment="Left" Margin="33,326,0,0" VerticalAlignment="Top"
                Command="{Binding Commands.ExportToXmlFile}"/>
    </Grid>
</Window>
