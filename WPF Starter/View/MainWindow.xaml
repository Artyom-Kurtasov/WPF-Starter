<Window x:Class="WPF_Starter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Starter"
        mc:Ignorable="d"
        Title="DataGridWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Export">
                <MenuItem Header="Export to excel" Command="{Binding NavigationCommands.ShowExportForm}"/>
                <MenuItem Header="Export to xml"/>
            </MenuItem>
        </Menu>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <DataGrid x:Name="peoplesGrid"
          AutoGenerateColumns="False">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date"
                            Binding="{Binding Date, StringFormat={}{0:dd.MM.yyyy}}" />
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Surname" Binding="{Binding Surname}" />
                    <DataGridTextColumn Header="Patronymic" Binding="{Binding Patronymic}" />
                    <DataGridTextColumn Header="City" Binding="{Binding City}" />
                    <DataGridTextColumn Header="Country" Binding="{Binding Country}" />
                </DataGrid.Columns>
            </DataGrid>


        </ScrollViewer>
    </Grid>
</Window>